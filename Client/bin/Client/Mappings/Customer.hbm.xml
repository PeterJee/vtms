<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="false">
	<class name="VTMS.Model.Entities.Customer,VTMS.Model.Entities" table="customer" lazy="false">

		<!-- Primary Key(s) -->
		<id name="Id" column="id" type="int">
			<generator class="identity"/>
		</id>
		
		<!-- Properties -->
    <property column="userid" type="String" name="UserId" not-null="true"/>
		<property column="name" type="String" name="Name" not-null="true" length="50" />
		<property column="phone" type="String" name="Phone" length="15" />
		<property column="address" type="String" name="Address" length="100" />
		
	</class>
</hibernate-mapping>
